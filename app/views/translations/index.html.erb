<h1>Translations</h1>


<table border="1">
<tr>
<th>Locale.key</th>
<th>Value</th>
</tr>
<% @translations.keys.each do |key| %>
<tr >
  <td ><%= key %> </td>
  <td ><%= @translations[key] %></td>
</tr>
<%end%>
</table>



<h2>Add Translation</h2>

<%= form_tag translations_path do %>
  <p>
    <%= label_tag :locale %><br />
    <%= text_field_tag :locale %>
  </p>
  <p>
    <%= label_tag :key %><br />
    <%= text_field_tag :key %>
  </p>
  <p>
    <%= label_tag :value %><br />
    <%= text_field_tag :value %>
  </p>
  <p><%= submit_tag "Submit" %></p>
<% end %>